# Environment Variables Template for QuickPe
# Copy this file to .env and fill in your actual values

# ===== BACKEND ENVIRONMENT VARIABLES =====

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quickpe?retryWrites=true&w=majority
# For local development with replica set: mongodb://localhost:27017/quickpe?replicaSet=quickpe-rs
# For local development standalone: mongodb://localhost:27017/quickpe

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters-long

# Application Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=https://quickpe-frontend.vercel.app

# Email Configuration (for contact form)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# ===== FRONTEND ENVIRONMENT VARIABLES =====
# (Set these in Vercel dashboard)

# API Base URL
VITE_API_URL=https://quickpe-backend.onrender.com/api/v1

# ===== LOCAL DEVELOPMENT SETUP =====
# For backend/.env:
# MONGODB_URI=mongodb://localhost:27017/quickpe?replicaSet=quickpe-rs
# JWT_SECRET=your-local-jwt-secret
# PORT=5001
# NODE_ENV=development
# FRONTEND_URL=http://localhost:5173

# For frontend: No .env needed (uses localhost:5001 automatically)
