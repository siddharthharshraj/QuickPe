# Environment Variables Template for QuickPe
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quickpe?retryWrites=true&w=majority
# For production: mongodb+srv://your-username:your-password@your-cluster.mongodb.net/quickpe-prod

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Email Configuration (for contact form)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Application Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=https://quickpe-frontend-production.railway.app
# For production: https://quickpe.siddharth-dev.tech

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
