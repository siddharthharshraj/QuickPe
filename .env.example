# Environment Variables Template for QuickPe
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/quickpe
# For production: mongodb+srv://your-username:your-password@your-cluster.mongodb.net/quickpe-prod

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long

# Email Configuration (for contact form)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-specific-password

# Application Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
# For production: https://quickpe.siddharth-dev.tech

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
